@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@model WebDesicionTable.Models.LogOnModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    <div>
        <div class="display-label-login">
            @Html.LabelFor(m => m.UserName)
        </div>
        <div class="display-field-login">
            @Html.TextBoxFor(m => m.UserName)
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
        <div class="display-label-login">
            @Html.LabelFor(m => m.Password)
        </div>
        <div class="display-field-login">
            @Html.PasswordFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="display-field-login">
            <input class="btnIngreso" type="submit" value="Ingresar"/>
        </div>
        <div class="display-clock-login">
            @(DateTime.Now.ToLongDateString().Substring(0, 1).ToUpper() + DateTime.Now.ToLongDateString().Substring(1))
            <span id="jclock"></span>
        </div>
    </div>
}
